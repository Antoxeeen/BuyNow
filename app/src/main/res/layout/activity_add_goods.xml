<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AddEditGoodsActivity">

    <EditText
        android:id="@+id/edit_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textAllCaps="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="4dp"/>

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_title">

    <EditText
        android:id="@+id/edit_text_add_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:singleLine="true" />

        <!--<ImageView
            android:id="@+id/image_view_add_goods"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/edit_text_add_goods"
            android:layout_alignBottom="@+id/edit_text_add_goods"
            android:layout_alignEnd="@+id/edit_text_add_goods"
            android:src="@drawable/ic_baseline_add_box_24"/>-->
        <Button
            android:id="@+id/add_goods_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/edit_text_add_goods"
            android:layout_alignBottom="@+id/edit_text_add_goods"
            android:layout_alignEnd="@+id/edit_text_add_goods"/>

    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/goods_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/relative_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingTop="16dp"
        tools:listitem="@layout/goods_item"/>


</androidx.constraintlayout.widget.ConstraintLayout>